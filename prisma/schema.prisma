generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shoe {
  id          Int       @id @default(autoincrement())
  color       String
  sole        String
  name        String    @unique
  description String
  created_at  DateTime  @default(now())
  deleted_at  DateTime?
  Item        Item[]

  @@map("tb_shoes")
}

model Item {
  id         Int       @id @default(autoincrement())
  hash_code  String    @unique @default(uuid())
  price      Decimal
  size       Int
  created_at DateTime  @default(now())
  deleted_at DateTime?
  shoe_id    Int
  Shoe       Shoe      @relation(fields: [shoe_id], references: [id])
  Order      Order[]
  Audit      Audit[]

  @@map("tb_items")
}

model Order {
  id        Int    @id @default(autoincrement())
  hash_code String @unique @default(uuid())
  note      String
  item_id   Int
  user_id   Int
  Item      Item   @relation(fields: [item_id], references: [id])
  User      User   @relation(fields: [user_id], references: [id])

  @@map("tb_orders")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  password   String
  role_id    Int
  created_at DateTime  @default(now())
  deleted_at DateTime?
  role       Role      @relation(fields: [role_id], references: [id])
  Order      Order[]
  Audit      Audit[]

  @@map("tb_users")
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique
  note String
  User User[]

  @@map("tb_roles")
}

model Audit {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  note       String
  user_id    Int
  item_id    Int?
  Item       Item?    @relation(fields: [item_id], references: [id])
  User       User     @relation(fields: [user_id], references: [id])

  @@map("tb_audits")
}
